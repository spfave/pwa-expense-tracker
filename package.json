  "dependencies": {
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "if-env": "^1.0.4",
    "mongoose": "^5.5.15",
    "morgan": "^1.9.1"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/preset-env": "^7.14.7",
    "babel-loader": "^8.2.2",
    "babel-plugin-dynamic-import-webpack": "^1.1.0",
    "concurrently": "^6.2.0",
    "webpack": "^5.40.0",
